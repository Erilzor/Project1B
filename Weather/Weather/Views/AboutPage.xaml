<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.Views.AboutPage"
             Title="About This Weather Application">

    <StackLayout>
        <Frame BackgroundColor="Beige" Padding="24" CornerRadius="0">
            <Label Text="Awesome WeatherApp" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
        <Label Text="Weather Application" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="This is my about page where i tell you about my little project" 
               FontSize="16" Padding="30,0,30,0"/>
        <Label Text="Select a city and give it a try!" FontSize="16" Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Created by Jennifer Björklund "/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>

</ContentPage>
